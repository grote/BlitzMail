<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:dialogTheme">@style/InvisibleTheme</item>
        <item name="android:dialogPreferenceStyle">@style/InvisibleTheme</item>
        <item name="android:preferenceStyle">@style/InvisibleTheme</item>
        <item name="android:alertDialogTheme">@style/InvisibleTheme</item>
        <item name="android:alertDialogStyle">@style/InvisibleTheme</item>
    </style>

    <style name="InvisibleTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="BaseDialogButtonStyle" parent="@style/Widget.AppCompat.Button">
    </style>

    <style name="DialogButtonStyle" parent="@style/BaseDialogButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_bg_selector</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DialogStyle" parent="@style/InvisibleTheme">
        <item name="android:background">@color/dialog_background</item>
    </style>

</resources>
